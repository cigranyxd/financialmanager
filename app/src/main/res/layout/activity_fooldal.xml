<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Telefonszam">

    <!-- Lenyíló menü -->
    <Spinner
        android:id="@+id/lenyilo_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:spinnerMode="dropdown" />

    <!-- Pénzösszeg szöveg megjelenítése -->
    <TextView
        android:id="@+id/JelenlegiText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Jelenlegi egyenleg:"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lenyilo_menu" />

    <!-- Aktuális pénz mező -->
    <EditText
        android:id="@+id/Aktualis_penz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        android:hint="0"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JelenlegiText" />

    <!-- Hozzáadás gomb -->
    <Button
        android:id="@+id/hozzaadas_gomb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hozzáadás"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/levonas_gomb"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/Aktualis_penz" />

    <!-- Levonás gomb -->
    <Button
        android:id="@+id/levonas_gomb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Levonás"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hozzaadas_gomb"
        app:layout_constraintTop_toBottomOf="@+id/Aktualis_penz" />

    <!-- Navigációs gombok -->
    <Button
        android:id="@+id/Fooldalbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Főoldal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ElemzesBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ElemzesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Elemzés"
        app:layout_constraintStart_toEndOf="@+id/Fooldalbtn"
        app:layout_constraintEnd_toStartOf="@+id/gomb3"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/gomb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Gomb 3"
        app:layout_constraintStart_toEndOf="@+id/ElemzesBtn"
        app:layout_constraintEnd_toStartOf="@+id/gomb4"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/gomb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Gomb 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gomb3"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
